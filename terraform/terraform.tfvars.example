# Configuração para deploy do Couples Financials
# Copie este arquivo para terraform.tfvars e ajuste os valores

# Configurações da AWS
aws_region = "us-east-1"
environment = "prod"

# Configurações da aplicação
app_name = "couples-financials"
domain_name = ""  # Opcional: seu domínio personalizado (ex: "app.seudominio.com")

# Configurações do Supabase
supabase_url = "https://elxttabdtddlavhseipz.supabase.co"
supabase_anon_key = "sua_chave_anonima_aqui"
supabase_service_role_key = "sua_chave_service_role_aqui"

# Configurações do container (ajuste conforme necessário)
container_image = "couples-financials:latest"
container_port = 80
desired_count = 2
cpu = 256
memory = 512

# CloudFront (para performance global)
enable_cloudfront = true
cloudfront_oac_id = ""  # Deixe vazio para criar automaticamente

# Logs
cloudwatch_log_retention_days = 7