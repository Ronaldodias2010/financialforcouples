# Exemplo de configuração para deploy com múltiplos domínios
# Copie este arquivo para terraform.tfvars e ajuste os valores

# Região AWS
aws_region = "us-east-1"

# Ambiente
environment = "prod"

# Nome da aplicação
app_name = "couples-financials"

# Domínio principal
domain_name = "couplesfinancials.com"

# Domínio secundário (opcional)
secondary_domain_name = "couplesfin.com"

# Configurações do Supabase
supabase_url = "https://elxttabdtddlavhseipz.supabase.co"
supabase_anon_key = "sua-chave-anonima-aqui"
supabase_service_role_key = "sua-service-role-key-aqui"

# Imagem Docker (será preenchida pelo script de deploy)
container_image = "123456789.dkr.ecr.us-east-1.amazonaws.com/couples-financials:latest"

# CloudFront
enable_cloudfront = true

# CloudFront OAC (deixe vazio para reutilizar existente)
cloudfront_oac_id = ""
cloudfront_create_oac = false

# Função CloudFront SPA (desabilitado por padrão devido a limites)
cloudfront_create_spa_function = false

# Auto-invalidar CloudFront após deploy
auto_invalidate_cloudfront = true

# Configurações de recursos
desired_count = 2
cpu = 256
memory = 512
